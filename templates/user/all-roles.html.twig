{% extends 'base.html.twig' %}

{% block title %}Всички роли{% endblock %}
{% block header %}
    <div class="d-inline">
        <h4>Всички роли</h4>
        {# <span>Място където може да добавяте нови работници</span> #}
    </div>
{% endblock %}
{% block breadcrumb %}
    {{ slope_it_breadcrumb() }}
{% endblock %}
{% block body %}
    <!-- Column Selectors table start -->
    <div class="card">
        <div class="card-header">
        </div>
        <div class="card-block">
            <div class="dt-responsive table-responsive">
                <table class="table table-striped table-bordered  display nowrap" id="example" style="width:100%">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>РОЛЯ</th>
                        <th>ИМЕ</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for role in roles %}
                        <tr>
                            <td>{{ role.id }}</td>
                            <td>{{ role.name }}</td>
                            <td>{{ role.title }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!-- Column Selectors end -->
{% endblock %}

